doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
	head
		meta(charset='utf-8')
		title Faculty Details
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		link(href='./assets/img/brand/favicon.png', rel='icon', type='image/png')
		style.
			.navbar {
			background-color: #B6C5C0;
			}
			.page-footer {
			background-color: #9CA5A2;
			}
			.page-footer a {
			color: white;
			}
			.page-footer a:hover {
			color: royalblue;
			text-decoration: none;
			}
			.container
			{
			top: 10px;
			right: 50px;
			left: 50px;
			position: relative;
			width: 75%;
			}
			input
			{
			display: inline-block;
			}
			body
			{
			height:100%;
			width: 100%;
			overflow-x: hidden;
			background-color: rgba(0, 0, 0, .5);
			background: linear-gradient(to right, #ffffff,#ffffff);
			}
			h1,h2
			{
			color: #BC8F8F;
			font-family: Bookman Old Style;
			}
			label
			{
			color: #696969
			}
			.button,.button:hover {
			background-color: rgb(192, 212, 216) ;
			border: none;
			color: rgb(49, 41, 41);
			padding: 15px 32px;
			text-align: center;
			text-decoration: none;
			display: inline-block;
			font-size: 16px;
			margin: 4px 2px;
			cursor: pointer;
			}
			.form-control
			{
			border-style: hidden  hidden solid ;
			border-radius: 0;
			}
			.form-control:focus,input:focus
			{
			outline: none;
			}
			.btn {
			width: 80px;
			}
	body
		nav.navbar.navbar-expand-xl.navbar-light.sticky-top
			.navbar-brand
				a.nav-link(href='#', style='color:black;')
					span.fa.fa-graduation-cap.mr-sm-1(style='font-size:70px;')
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarText', aria-controls='navbarText', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarText.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item
						a.nav-link(href='#')
							span.fa.fa-home.mr-3(style='font-size:30px;')
							span.sr-only (current)
					li.nav-item
						a.nav-link(href='#')
							span.fa.fa-user.mr-3(style='font-size:30px;')
					//
						<li class="nav-item">
						<a class="nav-link" href="#">REGISTER</a>
						</li>
					li.nav-item.dropdown
						a#navbarDropdown.nav-link.mr-3(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
							span.fa.fa-chevron-down(style='font-size:30px;')
						.dropdown-menu(aria-labelledby='navbarDropdown')
							a.dropdown-item(href='./s_student_report')  Student Report
							a.dropdown-item(href='./stud_attendance')  Attendance Report
				.row
					.col-xs-3.mr-lg-4
						h4 HI! USER 
							a(href='#')
								i.fa.fa-power-off(style='font-size:40px;').pl-lg-3
		.container.border.border-light.mt-3.mb-4
			h1(style='text-align:center;')  Faculty 
			br
			.table-hover
				// Projects table
				table.table.align-items-center.table-flush
					thead.thead-light
						tr
							th(scope='col') Name
							th(scope='col') Teacher ID
							th(scope='col') Date of Birth
							th(scope='col') Department
							th(scope='col') Qualification
							th(scope='col') Subject
							th(scope='col') Contact
							th(scope='col') Email ID
							th(scope='col') Gender
					tbody
						for item in items
							tr
								th(scope='row') #{item.name}
								td #{item.teacher_id}
								td #{item.date}
								td #{item.department}
								td #{item.qualification}
								td #{item.subject}
								td #{item.contact}
								td #{item.email}
								td #{item.gender}
		// Footer
		footer.page-footer.fixed-bottom.font-small.blue.pt-3
			.row
				.col-sm-3.mb-sm-1.text-center.mr-auto.ml-sm-2
					// Links
					h5.text-uppercase Links
					div
						ul.list-unstyled
							li
								a(href='#!') Announcements
							li
								a(href='#!') ABOUT US
				.col-sm-3.text-center.ml-auto.mr-sm-2
					h5.text-uppercase.text-center Contact Us
					// Facebook
					a.fb-ic(href='#!')
						span.fa.fa-facebook.mr-3  
					// Twitter
					a.tw-ic(href='')
						span.fa.fa-twitter.white-text.mr-3  
					// Google +
					a.gplus-ic(href='')
						span.fa.fa-google.white-text.mr-3  
					// Linkedin
					a.li-ic(href='#')
						span.fa.fa-linkedin.white-text.mr-3  
			// Footer Links
			// Copyright
			.footer-copyright.text-center
				| Â© 2019-Copyright:
				a(href='#')  ipuattendance.com
