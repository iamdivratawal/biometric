		script(type='text/javascript').
			function validateForm()
			{
			var s_nid = document.getElementById('s_nid').value;
			var s_did = document.getElementById('s_did').value;
			var s_pgid = document.getElementById('s_pgid').value;
			var s_smid = document.getElementById('s_smid').value;
			var s_btid = document.getElementById('s_btid').value;
			var s_cid = document.getElementById('s_cid').value;
			var s_enid = document.getElementById('s_enid').value;
			var s_eid = document.getElementById('s_eid').value;
			var s_pid = document.getElementById('s_pid').value;
			var name = /^[-+]?[0-9]+$/;
			if(s_nid =='' || s_did == ''||s_pgid == ''||s_smid == ''||s_btid == ''||s_cid == ''||s_enid == ''||s_eid == ''||s_pid == ''){
			alert("All fields are required...");
			return false;
			}
			else if(4 > s_btid.length || s_btid.length > 4 ){
			alert("batch year length should be 4 character...");
			return false;
			}
			else if(11 > s_enid.length || s_enid.length > 11 ){
			alert("Enrollment ID length should be 11 Characters...");
			return false;
			}
			else if(6 > s_pid.length || s_pid.length > 15 ){
			alert("Password length should be in between 6 to 14 Characters...");
			return false;
			}
			else if(1 > s_smid.length || s_smid.length > 1 ){
			alert("Semester length should be 1 character...");
			return false;
			}
			else if(10 > s_cid.length || s_cid.length > 10 ){
			alert("Contact length should be 10 character...");
			return false;
			}
			else{
			return true;
			}
			}
			function letteronly(input)
			{
			var x = /[^a-z ]/gi;
			input.value= input.value.replace(x , '');
			}
