		script(type='text/javascript').
			function validateForm()
			{
			var t_nid = document.getElementById('t_nid').value;
			var t_did = document.getElementById('t_did').value;
			var t_dpid = document.getElementById('t_dpid').value;
			var t_qid = document.getElementById('t_qid').value;
			var t_sbid = document.getElementById('t_sbid').value;
			var t_cid = document.getElementById('t_cid').value;
			var t_inid = document.getElementById('t_inid').value;
			var t_eid = document.getElementById('t_eid').value;
			var t_pid = document.getElementById('t_pid').value;
			if(t_nid =='' || t_did == ''||t_dpid == ''||t_qid == ''||t_sbid == ''||t_cid == ''||t_inid == ''||t_eid == ''||t_pid == ''){
			alert("All fields are required...");
			return false;
			}
			else if(3 > t_inid.length || t_inid.length > 3 ){
			alert("Teacher ID length should be 3 Characters...");
			return false;
			}
			else if(10 > t_cid.length || t_cid.length > 10 )
			{
			alert("Contact length should be 10 character...");
			return false;
			}
			else if(6 > t_pid.length || t_pid.length > 15 )
			{
			alert("Password length should be in between 6 to 14 Characters...");
			return false;
			}
			else{
			return true;
			}
			}
			function letteronly(input)
			{
			var x = /[^a-z ]/gi;
			input.value= input.value.replace(x , '');
			}
