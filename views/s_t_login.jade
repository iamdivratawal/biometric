		script(type='text/javascript').
			function validateForm() {
			var enroll_id = document.getElementById('enroll_id').value;
			var pass_id = document.getElementById('pass_id').value;
			if (enroll_id == '' || pass_id == '') {
			alert("All fields are required...");
			return false;
			} else if (11 > enroll_id.length || enroll_id.length > 11) {
			alert("Enrollment ID length should be 11 Characters...");
			return false;
			} else if (5 > pass_id.length || pass_id.length > 15) {
			alert("Password length should be in between 6 to 14 Characters...");
			return false;
			} else {
			return true;
			}
			}
